<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ranking</title>
    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="../public/css/ranking.css">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-main">

            <div class="header">
                <a href="/login/home" class="btn-back">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <h1>Ranking</h1>
            </div>

            <div class="search-container">
                <div class="search-wrapper">
                    <div class="input-group">
                        <span class="input-icon">
                            <span class="material-symbols-outlined">search</span>
                        </span>
                        <input type="text" class="input-field" placeholder="Search player...">
                    </div>
                </div>
            </div>

            <div class="table-container">
                <div class="table-wrapper">
                    <table>
                        <thead>
                        <tr>
                            <th style="width: 100px;">Rank</th>
                            <th>Player</th>
                            <th>Score</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#ranking}}
                            <tr class="rank-{{rank}}">
                                <td>
                                    <div class="rank-cell">
                                        <span># {{rank}}</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="player-cell">
                                        <img src="/public/subidos/avatars/{{user_avatar}}" alt="{{user_name}}" class="player-avatar">
                                        <span class="player-name">{{username}}</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="score-cell">{{total_score}}</div>
                                </td>
                            </tr>
                        {{/ranking}}

                        <!-- Current user row -->
                        <tr class="player-row">
                            <td>
                                <div class="rank-cell">
                                    <span># {{user_rank}}</span>
                                </div>
                            </td>
                            <td>
                                <div class="player-cell">
                                    <img src="/public/subidos/avatars/{{user_avatar}}" alt="{{user_name}}" class="player-avatar">
                                    <span class="player-name">{{user_name}}</span>
                                </div>
                            </td>
                            <td>
                                <div class="score-cell">{{score}}</div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            <div class="pagination-container">
                <nav>
                    <ul class="pagination">
                        {{#is_first_page}}
                            <li class="page-item disabled">
                            <span class="page-link disabled">
                                <span class="material-symbols-outlined">chevron_left</span>
                            </span>
                            </li>
                        {{/is_first_page}}
                        {{^is_first_page}}
                            <li class="page-item">
                                <a href="/ranking/display?page={{previous_page}}" class="page-link">
                                <span class="material-symbols-outlined">chevron_left</span>
                                </a>
                            </li>
                        {{/is_first_page}}

                        {{#total_pages}}
                            <li class="page-item">
                                <a href="/ranking/display?page={{.}}" class="page-link">{{.}}</a>
                            </li>
                        {{/total_pages}}

                        {{#is_last_page}}
                            <li class="page-item disabled">
                            <span class="page-link disabled">
                                <span class="material-symbols-outlined">chevron_right</span>
                            </span>
                            </li>
                        {{/is_last_page}}
                        {{^is_last_page}}
                            <li class="page-item">
                                <a href="/ranking/display?page={{next_page}}" class="page-link">
                                <span class="material-symbols-outlined">chevron_right</span>
                                </a>
                            </li>
                        {{/is_last_page}}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
</body>
</html>