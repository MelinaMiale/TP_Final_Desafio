<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    {{> header }}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ranking</title>
    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="../public/css/ranking.css">
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-main">
            <div class="header">
                <a href="/home/displayHome" class="btn-back">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <h1>Ranking</h1>
            </div>

            <div class="search-container">
                <div class="search-wrapper">
                    <div class="input-group">
                        <span class="input-icon">
                            <span class="material-symbols-outlined">search</span>
                        </span>
                        <input type="text" class="input-field" placeholder="Buscar jugador...">
                    </div>
                </div>
            </div>
            <div class="button-pais-container">
                <div class="button-tiempo">
                    <button id="btnTiempo">
                        <span>Tiempo</span>
                        <span class="material-symbols-outlined">expand_more</span>
                    </button>
                    <div class="desplegable" id="desplegable">
                        <div class="opcion" data-value="historico">Histórico</div>
                        <div class="opcion" data-value="mes">Mes</div>
                        <div class="opcion" data-value="semana">Semana</div>
                        <div class="opcion" data-value="dia">Día</div>
                    </div>
                </div>
                <div class="button-pais">
                    <button id="btnPais">
                        <span>País</span>
                        <span class="material-symbols-outlined">expand_more</span>
                    </button>
                    <div class="desplegable2" id="desplegable2">
                        <div class="opcion2" data-pais-id="all">Todos</div> {{#countries}}
                        <div class="opcion2" data-pais-id="{{id}}">{{nombre}}</div>
                    {{/countries}}
                    </div>
                </div>
            </div>

            <div class="table-container">
                <div class="table-wrapper">
                    <table>
                        <thead>
                        <tr>
                            <th style="width: 100px;">Rank</th>
                            <th>Player</th>
                            <th>Score</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#ranking}}
                            <tr class="rank-{{rank}}">
                                <td>
                                    <div class="rank-cell">
                                        <span># {{rank}}</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="player-cell">
                                        <a href="/profile/showProfile&user={{username}}" class="player-link">
                                        <img src="/public/subidos/avatars/{{avatar}}" alt="{{username}}" class="player-avatar">
                                        <span class="player-name">{{username}}</span>
                                        </a>
                                    </div>

                                </td>
                                <td>
                                    <div class="score-cell">{{total_score}}</div>
                                </td>
                            </tr>
                        {{/ranking}}

                        <tr class="player-row">
                            <td>
                                <div class="rank-cell">
                                    <span># {{user_rank}}</span>
                                </div>
                            </td>
                            <td>
                                <div class="player-cell">
                                    <img src="/public/subidos/avatars/{{user_avatar}}" alt="{{user_name}}" class="player-avatar">
                                    <span class="player-name">{{user_name}}</span>
                                </div>
                            </td>
                            <td>
                                <div class="score-cell">{{score}}</div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="pagination-container">
                <nav>
                    <ul class="pagination">
                        {{#is_first_page}}
                            <li class="page-item disabled">
                            <span class="page-link disabled">
                                <span class="material-symbols-outlined">chevron_left</span>
                            </span>
                            </li>
                        {{/is_first_page}}
                        {{^is_first_page}}
                            <li class="page-item">
                                <a href="/ranking/display?page={{previous_page}}" class="page-link">
                                <span class="material-symbols-outlined">chevron_left</span>
                                </a>
                            </li>
                        {{/is_first_page}}

                        {{#total_pages}}
                            <li class="page-item">
                                <a href="/ranking/display?page={{.}}" class="page-link">{{.}}</a>
                            </li>
                        {{/total_pages}}

                        {{#is_last_page}}
                            <li class="page-item disabled">
                            <span class="page-link disabled">
                                <span class="material-symbols-outlined">chevron_right</span>
                            </span>
                            </li>
                        {{/is_last_page}}
                        {{^is_last_page}}
                            <li class="page-item">
                                <a href="/ranking/display?page={{next_page}}" class="page-link">
                                <span class="material-symbols-outlined">chevron_right</span>
                                </a>
                            </li>
                        {{/is_last_page}}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<script>
    // 1. Leemos la URL actual para saber qué filtros hay
    const urlParams = new URLSearchParams(window.location.search);

    // Referencias
    const btnTiempo = document.getElementById('btnTiempo');
    const desplegableTiempo = document.getElementById('desplegable');
    const btnPais = document.getElementById('btnPais');
    const desplegablePais = document.getElementById('desplegable2');
    const searchInput = document.querySelector('.input-field');

    // 2. Manejo Dropdown TIEMPO
    btnTiempo.addEventListener('click', (e) => {
        e.stopPropagation();
        desplegableTiempo.classList.toggle('activo');
        desplegablePais.classList.remove('activo');
    });

    document.querySelectorAll('.opcion').forEach(opcion => {
        opcion.addEventListener('click', () => {
            // Obtenemos valor (historico, mes, semana, dia)
            const valor = opcion.getAttribute('data-value');
            urlParams.set('time', valor);
            urlParams.set('page', 1); // Volver a pag 1 al filtrar
            window.location.search = urlParams.toString(); // Recargar
        });
    });

    // 3. Manejo Dropdown PAIS
    btnPais.addEventListener('click', (e) => {
        e.stopPropagation();
        desplegablePais.classList.toggle('activo');
        desplegableTiempo.classList.remove('activo');
    });

    document.querySelectorAll('.opcion2').forEach(opcion => {
        opcion.addEventListener('click', () => {
            const paisId = opcion.getAttribute('data-pais-id');
            if(paisId === 'all') {
                urlParams.delete('country');
            } else {
                urlParams.set('country', paisId);
            }
            urlParams.set('page', 1);
            window.location.search = urlParams.toString();
        });
    });

    // Cerrar menús al hacer click afuera
    document.addEventListener('click', () => {
        desplegableTiempo.classList.remove('activo');
        desplegablePais.classList.remove('activo');
    });

    // 4. Manejo del Buscador (Enter)
    if(searchInput) {
        // Rellenar input si ya había búsqueda
        if(urlParams.has('search')) searchInput.value = urlParams.get('search');

        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const term = this.value.trim();
                if (term) {
                    urlParams.set('search', term);
                } else {
                    urlParams.delete('search');
                }
                urlParams.set('page', 1);
                window.location.search = urlParams.toString();
            }
        });
    }
</script>
</body>

</html>