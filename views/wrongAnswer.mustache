{{> header }}
<div class="container game-container" style="--category-color: {{categoryColor}};">
    <div class="category-header">
        <img src="../public/img/{{categoryIcon}}.png" alt="Category icon" class="category-icon">
        <span class="category-name">{{categoryName}}</span>
    </div>

    <h2 class="title">¡Respuesta incorrecta!</h2>
    <p><strong>Tiempo de respuesta:</strong> {{responseTime}} segundos</p>
    {{#wrongDueToTimeOut}}
        <p class="warning">No respondiste a tiempo. Se consideró incorrecta.</p>
    {{/wrongDueToTimeOut}}

    {{^wrongDueToTimeOut}}
        <p><strong>Tu respuesta:</strong> {{user_response}}</p>
    {{/wrongDueToTimeOut}}

    <div class="question-block">
        <p class="question-text">{{text}}</p>

        <div class="options-form">
            <div class="option {{#isUserA}}wrong-answer{{/isUserA}} {{#isCorrectA}}correct-answer{{/isCorrectA}}">
                <span>A) {{optionA}}</span>
            </div>
            <div class="option {{#isUserB}}wrong-answer{{/isUserB}} {{#isCorrectB}}correct-answer{{/isCorrectB}}">
                <span>B) {{optionB}}</span>
            </div>
            <div class="option {{#isUserC}}wrong-answer{{/isUserC}} {{#isCorrectC}}correct-answer{{/isCorrectC}}">
                <span>C) {{optionC}}</span>
            </div>
            <div class="option {{#isUserD}}wrong-answer{{/isUserD}} {{#isCorrectD}}correct-answer{{/isCorrectD}}">
                <span>D) {{optionD}}</span>
            </div>
        </div>
    </div>

    <div class="lobby-actions">
        <form action="../index.php?controller=Game&method=startGame" method="POST">
            <button type="submit" class="btn">Empezar nueva partida</button>
        </form>

        {{^reported}}
            <form action="../index.php?controller=ReportQuestion&method=reportQuestion" method="POST">
                <input type="hidden" name="questionId" value="{{questionId}}">
                <button type="submit" class="btn">Reportar esta pregunta</button>
            </form>
        {{/reported}}

        {{#reported}}
            <p class="form-footer">Ya reportaste una pregunta en esta partida.</p>
        {{/reported}}
    </div>
</div>
{{> footer }}