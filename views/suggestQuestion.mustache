{{> header }}

<div class="game-container">
    <h2 class="title">Sugerir una Pregunta</h2>

    <form class="register-form" action="/suggestion/submit" method="post">
        <div class="form-group">
            <label for="enunciado">Enunciado</label>
            <input type="text" id="enunciado" name="question" required>
        </div>

        <div class="form-grid">
            <div class="form-group">
                <label for="opcion_a">Opción A</label>
                <input type="text" id="opcion_a" name="answerA" required>
            </div>
            <div class="form-group">
                <label for="opcion_b">Opción B</label>
                <input type="text" id="opcion_b" name="answerB" required>
            </div>
            <div class="form-group">
                <label for="opcion_c">Opción C</label>
                <input type="text" id="opcion_c" name="answerC" required>
            </div>
            <div class="form-group">
                <label for="opcion_d">Opción D</label>
                <input type="text" id="opcion_d" name="answerD" required>
            </div>
        </div>

        <div class="form-group">
            <label for="respuesta_correcta">Respuesta Correcta</label>
            <select id="respuesta_correcta" name="correct" required>
                <option value="">Selecciona la opción correcta</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        </div>

        <button type="submit" class="btn">Enviar Sugerencia</button>
    </form>
</div>

{{> footer }}
